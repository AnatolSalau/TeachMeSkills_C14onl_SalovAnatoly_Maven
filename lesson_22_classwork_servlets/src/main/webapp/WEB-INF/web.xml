<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <!-- Необходимо определить два тега  servlet name, servlet class -->
  <servlet>
    <servlet-name>home</servlet-name>
    <servlet-class>HomeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>home2</servlet-name>
    <servlet-class>HomeServlet2</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>home3</servlet-name>
    <servlet-class>HomeServlet3</servlet-class>
    <!--Тэг load-on-startup загружает сервлет сразу не ждя request-->
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>book</servlet-name>
    <servlet-class>BookServlet</servlet-class>
  </servlet>

  <!--Указываем необходимый URL тегом servlet mapping -->
  <servlet-mapping>
    <servlet-name>home</servlet-name>
    <url-pattern>/home</url-pattern>
  </servlet-mapping>
  <!-- можно мапить один сервлет на несколько URL -->
  <servlet-mapping>
    <servlet-name>book</servlet-name>
    <url-pattern>/book</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>book</servlet-name>
    <url-pattern>/book2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>home2</servlet-name>
    <url-pattern>/home2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>home3</servlet-name>
    <url-pattern>/home3</url-pattern>
  </servlet-mapping>
</web-app>
